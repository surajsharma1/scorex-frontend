{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "install": {
    "runtime": "nodejs18.x",
    "packageManager": "npm"
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://scorex-backend.onrender.com/api/v1/$1"
    },
    {
      "source": "/overlays/(.*)",
      "destination": "/overlays/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "index, follow"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
